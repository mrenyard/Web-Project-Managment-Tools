#!/bin/bash -eu

if [[ "$#" -lt 1 ]]; then
  echo "Usage: virtualhost-get-domain HOST";
  exit 2;
fi

declare -r HOST=${1};

if [[ ! -f "/etc/apache2/sites-available/${HOST}.conf" ]]; then
    echo -e "  ...\e[0;31mFAILED!\e[0m Unable to locate Virtual Host File: '/etc/apache2/sites-available/${HOST}'";
    exit 1;
fi
declare -r PRIMARY_DOMAIN=`sed -n "2 p" /etc/apache2/sites-available/${HOST}.conf | sed -e 's/  ServerName //g' -e 's/.${HOSTNAME}//g'`;

echo ${PRIMARY_DOMAIN};
exit 0;
