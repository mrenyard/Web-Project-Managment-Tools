#!/bin/bash -eu

if [[ "$#" -lt 2 ]]; then
  echo "Usage: virtualhost-edit HOST NEW_DOMAIN";
  exit 1;
fi

declare -r HOST=${1};
declare -r NEW_DOMAIN=${2};
if [[ ! -f "/etc/apache2/sites-available/${HOST}.conf" ]]; then
    echo -e "  ...\e[0;31mFAILED!\e[0m Unable to locate Virtual Host File: '/etc/apache2/sites-available/${HOST}'";
    exit 1;
fi
declare -r EXISTING_DOMAIN=`virtualhost-get-domain ${HOST}`;

echo "EDITING VIRTUAL HOST FILE: '/etc/apache2/sites-available/${HOST}.conf'";
sudo /bin/sed -i "s/${EXISTING_DOMAIN}/${NEW_DOMAIN}/g" "/etc/apache2/sites-available/${HOST}.conf";
sudo /bin/sed -i "s/HOST/${HOST}/g" "/etc/apache2/sites-available/${HOST}.conf";
sudo echo "  ...COMPLETED!";
exit 0;
