#!/bin/bash -eu

echo    "Usage: webproject PROJECT_NAME new|extend|update|reset[[ --domain DOMAIN][ --application APP_NAME][ --copy DOMAIN_TO_COPY]]";
echo -e "Description: Create and Manage Web Project Skeletons.\n";
echo -e "PROJECT_NAME                    Name of required or 'new' project.\n";
echo    "new                             generate base project skeleton. If no domain provided use project_name to infer sub-domain with hostname";
echo    "  --domain DOMAIN                  use provided domain name for server setup on this project.";
echo    "  --application APP_NAME           include web application skeleton under project directory.";
echo -e "  --copy DOMAIN_TO_COPY            include static copy of current website under project directory.\n";
echo    "extend                          extend relevant feature(s) if NOT already in use.";
echo    "  --domain DOMAIN                  add provided domain name as an alias on this existing project.";
echo    "  --application APP_NAME           add web application skeleton under this project directory.";
echo -e "  --copy DOMAIN_TO_COPY            add static copy of current live site to this project.\n";
echo    "update                          update relevant feature(s). DOES NOT affect developer added files or existing base skeleton.";
echo    "  --domain DOMAIN                  change primary domain name for this project.";
echo    "  --application APP_NAME           update web application skeleton. Overwrites old with new. DOES NOT affect developer added files.";
echo -e "  --copy DOMAIN_TO_COPY            update/reset static copy of current site. OVERWRITES old.\n";
echo    "reset                           reset relevant feature(s).";
echo    "  --domain DOMAIN                  reset primary domain name for this project DELETING all aliases.";
echo    "  --application APP_NAME           reset web application skeleton under project directory. REMOVES any developer added files.";
echo -e "  --copy DOMAIN_TO_COPY            reset/update static copy of current site. OVERWRITES old.\n";

exit 0;