#!/bin/bash -eu

echo    "Usage: webproject \"PROJECT_NAME\" new|extend|update|reset[[ --domain DOMAIN][ --application APP_NAME][ --copy COPY_DOMAIN]]";
echo -e "Description: Create and Manage Web Project Skeletons and Virtualhosts.\n";
echo -e "PROJECT_NAME                    Name of required or 'new' project.\n";
echo    "new                             Generate base project skeleton (If no domain given infer sub-domain from PROJECT_NAME)";
echo    "  --domain DOMAIN                  Use provided sub-/domain name for server setup on this project.";
echo    "  --application APP_NAME           Include web application skeleton under project directory.";
echo -e "  --copy COPY_DOMAIN            Include static copy of current website under project directory.\n";
echo    "extend                          Extend relevant feature(s) if NOT already in use.";
echo    "  --domain DOMAIN                  Add provided sub-/domain name as an alias on this existing project.";
echo    "  --application APP_NAME           Add web application skeleton under this project directory.";
echo -e "  --copy COPY_DOMAIN            Add static copy of current live site to this project.\n";
echo    "update                          Update relevant feature(s). DOES NOT affect developer added files or existing base skeleton.";
echo    "  --domain DOMAIN                  Change primary sub-/domain name for this project.";
echo    "  --application APP_NAME           Update web application skeleton. Overwrites old with new. DOES NOT affect developer added files.";
echo -e "  --copy COPY_DOMAIN            Update/reset static copy of current site. OVERWRITES old.\n";
echo    "reset                           Reset relevant feature(s).";
echo    "  --domain DOMAIN                  Reset primary sub-/domain name for this project DELETING all aliases.";
echo    "  --application APP_NAME           Reset web application skeleton under project directory. REMOVES any developer added files.";
echo -e "  --copy COPY_DOMAIN            Reset/update static copy of current site. OVERWRITES old.\n";

exit 0;