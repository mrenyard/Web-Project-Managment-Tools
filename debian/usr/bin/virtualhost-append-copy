#!/bin/bash -eu

if [[ "$#" -lt 1 ]]; then
  echo "Usage: virtualhost-append-copy VIRTUAL_HOST_FILE";
  exit 1;
fi

declare -r VIRTUAL_HOST_FILE=${1};
if [[ ! -f "/etc/apache2/sites-available/${VIRTUAL_HOST_FILE}.conf" ]]; then
    echo "  ...FAILED! Unable to locate Virtual Host File: '/etc/apache2/sites-available/${VIRTUAL_HOST_FILE}'";
    exit 1;
fi
declare -r DOMAIN=`virtualhost-get-domain ${VIRTUAL_HOST_FILE}`;

sudo chmod 777 /etc/apache2/sites-available/${VIRTUAL_HOST_FILE}.conf;
sudo /bin/cat /etc/webshop/skel/vhost/copy.txt >> /etc/apache2/sites-available/${VIRTUAL_HOST_FILE}.conf;
sudo /bin/sed -i "s/PRIMARY_DOMAIN/${DOMAIN}/g" "/etc/apache2/sites-available/${VIRTUAL_HOST_FILE}.conf";
sudo chmod 664 /etc/apache2/sites-available/${VIRTUAL_HOST_FILE}.conf;

exit 0;
